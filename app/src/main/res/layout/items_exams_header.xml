<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_spacing_5dp"
    app:cardCornerRadius="@dimen/spacing_medium"
    app:cardElevation="@dimen/spacing_xsmall"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="10sp">

        <RelativeLayout
            android:id="@+id/text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/btn_result"
            android:gravity="left"
            android:padding="7sp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Term: "
                android:textAppearance="?android:textAppearance"
                android:textColor="@color/grey_dark"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_header_exam_term"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView1"
                android:paddingLeft="7dp"
                android:text="--------"
                android:textAppearance="?android:textAppearance"
                android:textColor="@color/grey_dark" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:text="Class: "
                android:textAppearance="?android:textAppearance"
                android:textColor="@color/grey_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_header_exam_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_toRightOf="@+id/textView3"
                android:paddingLeft="7dp"
                android:text="------"
                android:textAppearance="?android:textAppearance"
                android:textColor="@color/grey_dark" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:text="Term starts from: "
                android:textAppearance="?android:textAppearance"
                android:textColor="@color/grey_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_header_exam_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_toRightOf="@+id/textView6"
                android:paddingLeft="7dp"
                android:text="--/--/----"
                android:textAppearance="?android:textAppearance"
                android:textColor="@color/grey_dark" />

            <ImageView
                android:id="@+id/attchment_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/report_card_download"
                android:visibility="gone" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/btn_result"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_result"
            android:tint="@color/colorPrimaryLight" />

    </RelativeLayout>

</android.support.v7.widget.CardView>