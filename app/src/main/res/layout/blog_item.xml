<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_spacing_5dp"
    android:padding="7dp"
    app:cardCornerRadius="@dimen/spacing_medium"
    app:cardElevation="@dimen/spacing_xsmall"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10sp">

        <RelativeLayout
            android:id="@+id/text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp">

            <ImageView
                android:id="@+id/photo_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="5sp"
                android:src="@drawable/ic_blog" />

            <RelativeLayout
                android:id="@+id/data_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/photo_icon"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/photo_icon"
                android:paddingRight="5sp">

                <TextView
                    android:id="@+id/course_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:paddingTop="10dp"
                    android:text="Header"
                    android:textColor="@color/grey_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/course_txt"
                    android:gravity="fill_horizontal"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:paddingTop="3dp"
                    android:text="Description"
                    android:textColor="@color/grey_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/no_of_comment_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description_txt"
                    android:paddingBottom="10sp"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:paddingTop="3dp"
                    android:text="Comments"
                    android:textColor="@color/grey_dark"
                    android:textSize="14sp" />
                <!--<ImageView-->
                <!--android:id="@+id/notification_show"-->
                <!--android:layout_width="52dp"-->
                <!--android:layout_height="52dp"-->
                <!--android:layout_marginRight="49dp"-->
                <!--android:layout_marginEnd="49dp"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:paddingLeft="5sp"-->
                <!--android:src="@drawable/photo_icon"/>-->
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>