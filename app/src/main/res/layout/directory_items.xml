<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_spacing_5dp"
    app:cardCornerRadius="@dimen/spacing_medium"
    app:cardElevation="@dimen/spacing_xsmall"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:cacheColorHint="@android:color/transparent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/picture_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="5sp"
            android:src="@drawable/picture_icon"
            android:tint="@color/material_blue_solid" />

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/picture_icon"
            android:paddingLeft="10dp"
            android:text="Name"
            android:textColor="@color/grey_dark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/designation_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:text="designation"
            android:textColor="@color/grey_dark"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/address_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_txt"
            android:layout_toRightOf="@+id/picture_icon"
            android:paddingLeft="10dp"
            android:text="address"
            android:textColor="@color/grey_dark"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/phone_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_txt"
            android:layout_marginTop="5sp"
            android:layout_toRightOf="@+id/picture_icon"
            android:autoLink="all"
            android:paddingLeft="10dp"
            android:text="phone"
            android:textColor="#ea0000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/email_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_txt"
            android:layout_marginTop="5sp"
            android:layout_toRightOf="@+id/picture_icon"
            android:autoLink="all"
            android:paddingLeft="10dp"
            android:text="email"
            android:textColor="@color/grey_dark"
            android:textSize="12sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>