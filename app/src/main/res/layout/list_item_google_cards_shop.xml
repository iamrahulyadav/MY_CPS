<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background_white"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/google_cards_background_bottom"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="8dp">

        <com.knwedu.view.RobotoTextView
            android:id="@+id/list_item_google_cards_shop_promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignment"
            android:textColor="@color/material_lime_500"
            android:textSize="16sp"
            app:typeface="robotoBlack" />

        <com.knwedu.view.RobotoTextView
            android:id="@+id/list_item_google_cards_shop_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/material_red_500"
            android:textSize="20sp"
            app:typeface="robotoBlack" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128dp">

        <ImageView
            android:id="@+id/list_item_google_cards_shop_image"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:contentDescription="mainimg"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:background="@drawable/gradient_background_shop" />

        <com.knwedu.view.RobotoTextView
            android:id="@+id/list_item_google_cards_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:background="@android:color/transparent"
            android:text="Mathematics\nClass 4 Section A"
            android:textAppearance="?android:textAppearance"
            android:textColor="@android:color/white"
            app:typeface="robotoBlack" />

        <com.knwedu.view.RobotoTextView
            android:id="@+id/list_item_google_cards_shop_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:layout_weight="0"
            android:gravity="center"
            android:minHeight="36dp"
            android:minWidth="64dp"
            android:padding="8dp"
            android:text="Published on: 24-02-2018"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:typeface="robotoMedium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp">

            <com.knwedu.view.RobotoTextView
                android:id="@+id/list_item_google_cards_shop_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:maxLines="2"
                android:text="Created Date: 22-02-2018"
                android:textAppearance="?android:textAppearance"
                android:textColor="@android:color/white"
                app:typeface="robotoLight" />

            <com.knwedu.view.RobotoTextView
                android:id="@+id/list_item_google_cards_shop_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:text="Created By: Test Teacher"
                android:textAppearance="?android:textAppearance"
                android:textColor="@android:color/white"
                app:typeface="robotoRegular" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>