<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_spacing_5dp"
    app:cardCornerRadius="@dimen/spacing_medium"
    app:cardElevation="@dimen/spacing_xsmall"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@android:color/transparent"
        android:paddingBottom="10dp"
        android:paddingTop="5dp">

        <RelativeLayout
            android:id="@+id/layout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view4">

            <TextView
                android:id="@+id/textView_title"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="5dp"
                android:text="Title :"
                android:textColor="@color/grey_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/textView_title"
                android:layout_toRightOf="@id/textView_title"
                android:padding="5dp"
                android:textColor="@color/grey_dark" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_title">

            <TextView
                android:id="@+id/text_desc"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="5dp"
                android:text="Description :"
                android:textColor="@color/grey_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDesc"
                android:layout_width="1100dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/text_desc"
                android:layout_toRightOf="@id/text_desc"
                android:padding="5dp"
                android:textColor="@color/grey_dark" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_desc">

            <TextView
                android:id="@+id/textstudent"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="5dp"
                android:text="Student :"
                android:textColor="@color/grey_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/textstudent"
                android:layout_toRightOf="@id/textstudent"
                android:gravity="center_horizontal|center_vertical"
                android:padding="5dp"
                android:textColor="@color/grey_dark" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_created_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_created_by">

            <TextView
                android:id="@+id/textdate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="5dp"
                android:text="Created Date :"
                android:textColor="@color/grey_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCreatedDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/textdate"
                android:layout_toRightOf="@id/textdate"
                android:padding="5dp"
                android:textColor="@color/grey_dark" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_created_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_student">

            <TextView
                android:id="@+id/textcreated_by"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="5dp"
                android:text="Created By :"
                android:textColor="@color/grey_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCreatedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/textcreated_by"
                android:layout_toRightOf="@id/textcreated_by"
                android:padding="5dp"
                android:textColor="@color/grey_dark" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_created_date"
            android:gravity="right">

            <ImageView
                android:id="@+id/imageViewDelete"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/layout_created_date"
                android:background="@drawable/blue_border_box"
                android:padding="5dp"
                android:src="@drawable/ic_delete"
                android:tint="@color/material_blue_solid" />

            <ImageView
                android:id="@+id/imageViewEdit"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/layout_created_date"
                android:layout_marginLeft="7dp"
                android:layout_toLeftOf="@+id/imageViewDelete"
                android:background="@drawable/blue_border_box"
                android:padding="5dp"
                android:src="@drawable/comments_edit"
                android:tint="@color/material_blue_solid" />

            <ImageView
                android:id="@+id/imageViewViewDoc"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/layout_created_date"
                android:layout_marginLeft="7dp"
                android:layout_toLeftOf="@id/imageViewEdit"
                android:background="@drawable/blue_border_box"
                android:padding="5dp"
                android:src="@drawable/doc_new_button"
                android:tint="@color/material_blue_solid" />

            <ImageView
                android:id="@+id/imageViewComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_created_date"
                android:layout_toLeftOf="@id/imageViewViewDoc"
                android:padding="5dp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>