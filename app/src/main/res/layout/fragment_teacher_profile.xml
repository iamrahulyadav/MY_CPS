<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginBottom="5sp"
    android:background="@android:color/transparent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/class_subjects_btn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2sp"
                android:gravity="top"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingTop="20sp"
                    android:weightSum="100">

                    <Button
                        android:id="@+id/btn_add_sub"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5sp"
                        android:layout_weight="35"
                        android:background="@android:color/transparent"
                        android:drawableTint="@color/colorPrimaryLight"
                        android:drawableTop="@drawable/add_subject"
                        android:scaleType="fitCenter"
                        android:text="Add Subject"
                        android:textColor="@color/grey_dark"
                        android:textSize="12sp"
                        android:visibility="invisible" />

                    <!-- <ImageView
                        android:id="@+id/image_vieww"
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_gravity="center"
                        android:background="@drawable/profile_circle" /> -->

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10sp"
                        android:layout_marginTop="2dp">

                        <ImageView
                            android:id="@+id/image_view_profile"
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:layout_gravity="center"
                            android:background="@drawable/round_shape"
                            android:src="@drawable/ic_user"
                            android:tint="@color/white" />
                        <!--<de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image_vieww"
                            android:layout_width="90sp"
                            android:layout_height="90sp"
                            android:layout_gravity="center"
                            />-->
                    </FrameLayout>

                    <Button
                        android:id="@+id/change_password_btn"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5sp"
                        android:layout_weight="35"
                        android:background="@android:color/transparent"
                        android:drawableTint="@color/colorPrimaryLight"
                        android:drawableTop="@drawable/edit_password"
                        android:scaleType="fitCenter"
                        android:text="Change Password"
                        android:textColor="@color/grey_dark"
                        android:textSize="12sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/name_txt_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:scaleType="fitCenter"
                    android:text="Name"
                    android:textColor="@color/grey_dark"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_large" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_soft" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:id="@+id/lyt_username"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_middle">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="@dimen/spacing_middle"
                        android:src="@drawable/ic_user"
                        android:tint="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="User Id"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/grey_dark" />

                        <TextView
                            android:id="@+id/userid_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/grey_medium" />
                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="50dp"
                    android:background="@color/grey_soft" />

                <LinearLayout
                    android:id="@+id/lyt_username"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_middle">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="@dimen/spacing_middle"
                        android:src="@drawable/ic_user"
                        android:tint="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/grey_dark" />

                        <TextView
                            android:id="@+id/name_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/grey_medium" />
                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="50dp"
                    android:background="@color/grey_soft" />

                <LinearLayout
                    android:id="@+id/lyt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_middle">

                    <ImageView
                        android:layout_width="50dp"

                        android:layout_height="50dp"
                        android:clickable="true"
                        android:padding="@dimen/spacing_middle"
                        android:src="@drawable/ic_form_mail"
                        android:tint="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            android:textColor="@color/grey_dark" />

                        <TextView
                            android:id="@+id/email_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/grey_medium" />

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/ib_editEmail"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="13dp"
                        android:background="@android:color/transparent"
                        android:padding="@dimen/spacing_middle"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_edit"
                        android:visibility="invisible"
                        android:tint="@color/primary_orange" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey_soft" />

            <LinearLayout
                android:id="@+id/lyt_phone"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_middle">

                <ImageView
                    android:layout_width="50dp"

                    android:layout_height="50dp"
                    android:clickable="true"
                    android:padding="@dimen/spacing_middle"
                    android:src="@drawable/ic_call"
                    android:tint="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/grey_dark" />

                    <TextView
                        android:id="@+id/phone_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/grey_medium" />


                </LinearLayout>

                <ImageButton
                    android:id="@+id/ib_editPhone"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="13dp"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/spacing_middle"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_edit"
                    android:tint="@color/primary_orange" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="50dp"
                android:background="@color/grey_soft" />

            <LinearLayout
                android:id="@+id/data_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/address_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:textColor="@color/textbox_label"
                android:visibility="gone" />

            <TextView
                android:id="@+id/address_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:background="@drawable/textbox"
                android:gravity="left"
                android:padding="5dp"
                android:textColor="@color/textbox_text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/alt_email_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alt_email"
                android:textColor="@color/textbox_label"
                android:visibility="gone" />

            <TextView
                android:id="@+id/alt_email_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:background="@drawable/textbox"
                android:gravity="left"
                android:padding="5dp"
                android:textColor="@color/textbox_text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/religion_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/religion"
                android:textColor="@color/textbox_label"
                android:visibility="gone" />

            <TextView
                android:id="@+id/religion_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:background="@drawable/textbox"
                android:gravity="left"
                android:padding="5dp"
                android:textColor="@color/textbox_text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/blood_group_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blood_group"
                android:textColor="@color/textbox_label"
                android:visibility="gone" />

            <TextView
                android:id="@+id/blood_group_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:background="@drawable/textbox"
                android:gravity="left"
                android:padding="5dp"
                android:textColor="@color/textbox_text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/pin_code_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pincode"
                android:textColor="@color/textbox_label"
                android:visibility="gone" />

            <TextView
                android:id="@+id/pin_code_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:background="@drawable/textbox"
                android:gravity="left"
                android:padding="5dp"
                android:textColor="@color/textbox_text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dob_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dob"
                android:textColor="@color/textbox_label"
                android:visibility="gone" />

            <TextView
                android:id="@+id/dob_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:background="@drawable/textbox"
                android:gravity="left"
                android:padding="5dp"
                android:textColor="@color/textbox_text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/eduQualification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/educational_qualification"
                android:textColor="@color/textbox_label"
                android:visibility="gone" />

            <TextView
                android:id="@+id/eduQualification_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:background="@drawable/textbox"
                android:gravity="left"
                android:padding="5dp"
                android:textColor="@color/textbox_text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/otherQualification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other_qualification"
                android:textColor="@color/textbox_label"
                android:visibility="gone" />

            <TextView
                android:id="@+id/otherQualification_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:background="@drawable/textbox"
                android:gravity="left"
                android:padding="5dp"
                android:textColor="@color/textbox_text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/doj_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_of_joining"
                android:textColor="@color/textbox_label"
                android:visibility="gone" />

            <TextView
                android:id="@+id/doj_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:background="@drawable/textbox"
                android:gravity="left"
                android:padding="5dp"
                android:textColor="@color/textbox_text"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/class_subjects_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/banner"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="5dp"
        android:background="@drawable/blue_button"
        android:text="@string/classes_and_subject_list"
        android:textColor="@color/button_text"
        android:visibility="gone" />

    <com.inmobi.monetization.IMBanner
        android:id="@+id/banner"
        adSize="15"
        appId="@string/InMobi_Property_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5sp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/app_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/banner"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/banner"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/footer"
        android:textColor="#4b586c"
        android:textSize="14sp"
        android:visibility="gone" />

</RelativeLayout>