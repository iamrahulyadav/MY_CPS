<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_spacing_5dp"
    app:cardCornerRadius="@dimen/spacing_medium"
    app:cardElevation="@dimen/spacing_xsmall"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:cacheColorHint="@android:color/transparent">
        <TextView
            android:id="@+id/date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="5dp"
            android:text="2016-05-27"
            android:textColor="@color/material_blue_solid"
            android:textSize="15dp" />
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/date_text"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textStyle="bold"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="Mobile Application Developmentskdaksdkahdkhdhadkhakdhdkhakd"
                android:textColor="@color/grey_dark" />


        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"

            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/description_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/next"
                android:maxLines="3"
                android:padding="8dp"
                android:paddingLeft="5dp"
                android:text="Teached By: Saad Siddique"
                android:textColor="@color/grey_dark" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/description_txt"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/description_txt"
                android:background="@color/transparent"
                android:padding="5dp"
                android:src="@drawable/arrow_right"
                android:visibility="gone" />
        </RelativeLayout>




    </RelativeLayout>

</android.support.v7.widget.CardView>